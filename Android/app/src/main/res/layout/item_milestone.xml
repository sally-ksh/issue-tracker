<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="item"
            type="com.team1.issuetracker.data.model.Milestone" />

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- 하단 삭제 view 영역 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/erase_item_view"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintWidth_percent="0.3"
                android:background="#CCD4FF">

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/gl_h_30"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_percent="0.3"/>

                <ImageView
                    android:id="@+id/iv_close"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toBottomOf="@id/gl_h_30"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintWidth_percent="0.186"
                    app:layout_constraintDimensionRatio="1:1"
                    android:src="@drawable/ic_issue_list_close"/>

                <View
                    android:id="@+id/empty_view_1_1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toBottomOf="@id/iv_close"
                    app:layout_constraintDimensionRatio="129:10"/>

                <TextView
                    android:id="@+id/tv_close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/empty_view_1_1"
                    android:text="닫기"
                    style="@style/Text_Secondary1.14_Bold"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- 상단 swipe view 영역 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/milestone_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <!-- check box 영역 -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_checkbox"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintWidth_percent="0.27"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:visibility="gone">

                <CheckBox
                    android:id="@+id/checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>


            <View
                android:id="@+id/empty_view_start"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/cl_checkbox"
                app:layout_constraintWidth_percent="0.0444"/>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/gl_v_95.56"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.9556"/>

            <View
                android:id="@+id/empty_view_1"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                app:layout_constraintTop_toTopOf="parent"/>


            <TextView
                android:id="@+id/tv_milestone_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:shapeAppearanceOverlay="@style/cardViewRadius"
                app:layout_constraintTop_toBottomOf="@id/empty_view_1"
                app:layout_constraintStart_toEndOf="@id/empty_view_start"
                app:layout_constraintWidth_percent="0.6"
                app:cardElevation="0dp"
                android:text="@{item.title}"
                android:textSize="16sp"
                android:textColor="@color/black"
                tools:text="제목"/>

            <TextView
                android:id="@+id/tv_milestone_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toEndOf="@+id/tv_milestone_title"
                app:layout_constraintTop_toBottomOf="@id/empty_view_1"
                android:textColor="@color/Success3"
                android:textSize="16sp"
                tools:text="진행률 %"/>

            <View
                android:id="@+id/view_for_content"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintDimensionRatio="16:129"/>
            
            <View
                android:id="@+id/empty_view_2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintHeight_percent="0.05"
                app:layout_constraintTop_toBottomOf="@id/tv_milestone_title"/>

            <TextView
                android:id="@+id/tv_milestone_content"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/empty_view_2"
                app:layout_constraintStart_toEndOf="@id/empty_view_start"
                android:gravity="left|center_vertical"
                android:maxLines="2"
                android:ellipsize="end"
                style="@style/Text_Grey1.14"
                tools:text="이슈에 대한 설명(최대 두 줄까지 보여줄 수 있다)"
                android:text="@{item.content}"/>

            <View
                android:id="@+id/empty_view_3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintHeight_percent="0.05"
                app:layout_constraintTop_toBottomOf="@id/tv_milestone_content"/>

            <ImageView
                android:id="@+id/iv_calendar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/empty_view_3"
                app:layout_constraintStart_toEndOf="@id/empty_view_start"
                android:src="@drawable/ic_calendar"/>

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/iv_calendar"
                app:layout_constraintTop_toBottomOf="@id/empty_view_3"
                android:layout_marginStart="10dp"
                android:text="@{item.date}"
                tools:text="완료일(생략 가능)"/>

            <View
                android:id="@+id/empty_view_4"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintHeight_percent="0.07"
                app:layout_constraintTop_toBottomOf="@id/tv_date"/>
            
            <androidx.cardview.widget.CardView
                android:id="@+id/cv_open_badge"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/empty_view_4"
                app:layout_constraintStart_toEndOf="@id/empty_view_start"
                card_view:cardCornerRadius="100dp"
                app:layout_constraintWidth_percent="0.32"
                android:backgroundTint="@color/Primary2">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_open_issue"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:layout_marginStart="9dp"
                    android:layout_gravity="start|center_vertical"
                    android:backgroundTint="@color/Primary1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginStart="5dp"
                    android:paddingEnd="10dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:textColor="@color/Primary1"
                    setOpenIssue="@{item.open}"
                    tools:text="열린 이슈 1개"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_closed_badge"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/empty_view_4"
                app:layout_constraintStart_toEndOf="@id/cv_open_badge"
                card_view:cardCornerRadius="100dp"
                app:layout_constraintWidth_percent="0.32"
                android:layout_marginStart="8dp"
                android:backgroundTint="@color/Secondary2">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_issue_close_white"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:layout_marginStart="9dp"
                    android:layout_gravity="start|center_vertical"
                    android:backgroundTint="@color/Secondary1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginStart="5dp"
                    android:paddingEnd="10dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:textColor="@color/Secondary1"
                    setClosedIssue="@{item.closed}"
                    tools:text="닫힌 이슈 1개"/>
            </androidx.cardview.widget.CardView>

            <View
                android:id="@+id/empty_view_5"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@id/cv_open_badge"
                app:layout_constraintHeight_percent="0.2"/>

            <View
                android:id="@+id/view_line"
                android:layout_width="0dp"
                android:layout_height="1dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintWidth_percent="0.95"
                android:background="@color/Grey5" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>
</layout>